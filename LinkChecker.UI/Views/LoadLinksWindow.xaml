<Window x:Class="LinkChecker.UI.Views.LoadLinksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод ссылок вручную"
        Icon="/Resources/icon.ico"
        SizeToContent="Height"
        Width="400"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="False">
    <StackPanel Margin="10">
        <TextBlock Text="Введите ссылки (через запятую, точку с запятой или с новой строки):" Margin="0,0,0,10"/>
        <TextBox Name="LinksInput" Height="150" AcceptsReturn="True"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="70" Margin="5" Click="OkBtn_Click" Padding="10,5,10,5"/>
            <Button Content="Отмена" Width="70" Margin="5" Click="CancelBtn_Click" Padding="10,5,10,5"/>
        </StackPanel>
    </StackPanel>
</Window>